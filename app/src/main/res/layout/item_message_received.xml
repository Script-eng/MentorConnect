<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingStart="8dp"
    android:paddingEnd="64dp">


    <TextView
        android:id="@+id/message_text_received"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_message_received"
    android:textColor="@color/chat_received_text"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    app:layout_constrainedWidth="true"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:text="Received message content should be visible now."/>

    <!-- Timestamp -->
    <TextView
    android:id="@+id/timestamp_text_received"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="10sp"
    tools:text="10:31 AM"
    android:textColor="@color/chat_timestamp_received"
    android:layout_marginStart="4dp"
    android:layout_marginTop="2dp"
    app:layout_constraintTop_toBottomOf="@id/message_text_received"
    app:layout_constraintStart_toStartOf="@id/message_text_received" />

</androidx.constraintlayout.widget.ConstraintLayout>