<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingStart="64dp"
    android:paddingEnd="8dp">


<TextView
android:id="@+id/message_text_sent"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:background="@drawable/bg_message_sent"
android:paddingStart="12dp"
android:paddingEnd="12dp"
android:paddingTop="8dp"
android:paddingBottom="8dp"
android:textColor="@color/chat_sent_text"
app:layout_constrainedWidth="true"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintEnd_toEndOf="parent"
tools:text="This is my message sent very very very very very very very very very very very very very very long message to test wrapping."/>

<TextView
android:id="@+id/timestamp_text_sent"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textColor="@color/chat_timestamp_sent"
android:layout_marginEnd="4dp"
android:textSize="10sp"
tools:text="10:30 AM"
android:layout_marginTop="2dp"
app:layout_constraintTop_toBottomOf="@id/message_text_sent"
app:layout_constraintEnd_toEndOf="@id/message_text_sent" />

    </androidx.constraintlayout.widget.ConstraintLayout>